<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnToggleRender"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginEnd="@dimen/margin_medium"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_button_active"
        android:textColor="@color/white"
        android:text="Dữ liệu"
        android:textSize="12dp"
        app:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@+id/searchInputView"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnFindHealthFacilities"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_button_active"
        android:text="Cơ sở y tế"
        android:textColor="@color/white"
        android:textSize="12dp"
        app:elevation="2dp"
        app:layout_constraintEnd_toStartOf="@+id/btnToggleRender"
        app:layout_constraintTop_toBottomOf="@+id/searchInputView" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnFindAtm"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="120dp"
        android:background="@drawable/bg_button_active"
        android:text="Atm"
        android:textColor="@color/white"
        android:textSize="12dp"
        app:elevation="2dp"
        app:layout_constraintEnd_toStartOf="@+id/btnToggleRender"
        app:layout_constraintTop_toBottomOf="@+id/searchInputView" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnCurrentLocation"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginEnd="@dimen/margin_medium"
        android:layout_marginBottom="16dp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:src="@drawable/ic_current_location"
        app:borderWidth="0dp"
        app:elevation="2dp"
        app:fabCustomSize="44dp"
        app:layout_constraintBottom_toTopOf="@+id/btnDirect"
        app:layout_constraintEnd_toEndOf="parent"
        app:maxImageSize="32dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnDirect"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:src="@drawable/ic_directions_button"
        app:borderWidth="0dp"
        app:elevation="2dp"
        app:fabCustomSize="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:maxImageSize="32dp" />

    <com.hcmut.admin.utraffictest.customview.SearchInputView
        android:id="@+id/searchInputView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>

